<!-- Main content -->
<section class="content">
<!-- Small boxes (Stat box) -->
<div class="row">
  <div class="col-lg-4 col-xs-4">
    <!-- small box -->
    <div class="small-box bg-yellow">
      <div class="inner">
        <h3><%= @counters[:products] %></h3>

        <p>Produtos</p>
      </div>
      <div class="icon">
        <i class="ion ion-bag"></i>
      </div>
      <%= link_to show_products_path(current_admin), class: "small-box-footer" do %>
        Mais informações <i class="fa fa-arrow-circle-right"></i>
      <% end %>
    </div>
  </div>
  <!-- ./col -->

  <div class="col-lg-4 col-xs-4">
    <!-- small box -->
    <div class="small-box bg-red">
      <div class="inner">
        <h3><%= @counters[:services] %></h3>

        <p>Serviços</p>
      </div>
      <div class="icon">
        <i class="ion ion-stats-bars"></i>
      </div>
        <%= link_to show_services_path(current_admin), class: "small-box-footer" do %>
          Mais informações <i class="fa fa-arrow-circle-right"></i>
        <% end %>
    </div>
  </div>
  <!-- ./col -->

  <div class="col-lg-4 col-xs-4">
    <!-- small box -->
    <div class="small-box bg-green">
      <div class="inner">
        <h3><%= @counters[:clients] %></h3>

        <p>Clientes</p>
      </div>
      <div class="icon">
        <i class="fa fa-users"></i>
      </div>
      <%= link_to show_clients_path(current_admin), class: "small-box-footer" do %>
        Mais informações <i class="fa fa-arrow-circle-right"></i>
      <% end %>

    </div>
  </div>
  <!-- ./col -->
</div>
</section>
<!-- /.content -->
