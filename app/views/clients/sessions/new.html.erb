<!-- Input addon -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Entrar
    </h1>
    <ol class="breadcrumb">
      <li>
        <% link_to root_path do %>
          <i class="fa fa-dashboard"></i> Home
        <% end %>
      </li>
      <li class="active">Entrar</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content align-center">
    <div class="row">
      <div class="col-md-3">
        <!-- Horizontal Form -->
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">Ja Ã© nosso cliente!</h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
            <div class="box-body">


              <div class="form-group">
                <div class="col-sm-12">
                  <%= f.email_field :email, class: "form-control", id:"inputEmail3", placeholder: "Email", autofocus: true %><br>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-12">
                  <%= f.password_field :password, class: "form-control", id: "inputPassword3", placeholder: "Password" , autocomplete: "off" %>
                </div>
              </div>


              <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <div class="col-sm-offset-1 col-sm-10">
                    <div class="checkbox">
                      <%= f.check_box :remember_me %>
                      Lembrar
                    </div>
                  </div>
                </div>
              <% end -%>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
              <%= link_to "Cadastrar", new_client_registration_path, class: "btn btn-default pull-left" %>
              <%= f.submit "Entrar", class: "btn btn-info pull-right" %>
            </div>
            <!-- /.box-footer -->
          <% end %>
        </div>
      </div> <!-- col md -->
    </div> <!-- row -->
  </section>
</div>
