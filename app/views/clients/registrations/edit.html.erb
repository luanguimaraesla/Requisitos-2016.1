<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Configurações
    <small>Editar</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">Forms</a></li>
    <li class="active">Configurações</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-6"><!-- left column -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">Configurações</h3>
          </div>

          <div class="box-body">

            <!-- USERNAME -->
            <div class="input-group">
              <span class="input-group-addon">@</span>
              <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: current_client.username %>
            </div>
            <br />

            <!-- NAME -->
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-edit"></i></span>
              <%= f.text_field :name, class: "form-control", placeholder: current_client.name %>
            </div>
            <br />

            <!-- CPF -->
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-slack"></i></span>
              <%= f.text_field :cpf, class: "form-control", placeholder: current_client.cpf %>
            </div>
            <br />

            <!-- EMAIL -->
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
              <%= f.email_field :email, class: "form-control", placeholder: current_client.email %>
            </div>
            <br />

            <!-- PHONENUMBER -->
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-phone"></i></span>
              <%= f.text_field :phone, class: "form-control", placeholder: current_client.phone %>
            </div>
            <br />

            <!-- ADDRESS -->
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-map"></i></span>
              <%= f.text_field :address, class: "form-control", placeholder: current_client.address %>
            </div>
            <br />

            <!-- COMPANY -->
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-building-o"></i></span>
              <%= f.text_field :company, class: "form-control", placeholder: current_client.company %>
            </div>
            <br />

            <h4>Configurações de Senha</h4>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <span class="help-block">
                  <i class="fa fa-bell-o"></i>
                  Aguardando confirmação para o email: <%= resource.unconfirmed_email %>
                </span>
            <% end %>

            <!-- COMPANY -->
            <div class="input-group has-warning">
              <%= f.label :password, class:"control-label" %>
              <label class="control-label" for="inputWarning"><i class="fa fa-bell-o"></i> Deixe em branco para não alterar</label>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
            <br />

            <div class="input-group has-warning">
              <%= f.label :password_confirmation, class:"control-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
            <br />

            <div class="input-group">
              <%= f.label :current_password, class:"control-label" %>
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>
            <br />
          </div><!-- /.box-body -->

          <div class="box-footer">
            <%= f.submit "Salvar", class: "btn btn-flat btn-primary pull-right" %>
          </div>
        </div>
      <% end %>
      <div class="input-group margin">
        <div class="input-group-btn">
          <%= button_to "Deletar minha conta", registration_path(resource_name), class: "btn btn-flat btn-danger", data: { confirm: "Poxa, você tem mesmo certeza disso?" }, method: :delete %>
        </div>
        <!-- /btn-group -->
        <input type="text" class="form-control" placeholder="Oh não! Pode nos contar o motivo?">
      </div>
    </div> <!-- /col-md-6 -->
  </div> <!-- row -->
</section>
