<!-- Input addon -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Cadastro
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Cadastro</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <!-- left column -->
      <div class="col-md-6">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Configurações</h3>
            </div>

            <div class="box-body">

              <!-- USERNAME -->
              <div class="input-group">
                <span class="input-group-addon">@</span>
                <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Nome de usuário" %>
              </div>
              <br>

              <!-- NAME -->
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                <%= f.text_field :name, class: "form-control", placeholder: "Nome completo" %>
              </div>
              <br>

              <!-- CPF -->
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-slack"></i></span>
                <%= f.text_field :cpf, class: "form-control", placeholder: "999.999.999-99" %>
              </div>
              <br>

              <!-- EMAIL -->
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <%= f.email_field :email, class: "form-control", placeholder: "e-mail" %>
              </div>
              <br>

              <!-- PHONENUMBER -->
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                <%= f.text_field :phone, class: "form-control", placeholder: "(99) 12345-6789" %>
              </div>
              <br>

              <!-- ADDRESS -->
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-map"></i></span>
                <%= f.text_field :address, class: "form-control", placeholder: "Endereço completo" %>
              </div>
              <br>

              <!-- COMPANY -->
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-building-o"></i></span>
                <%= f.text_field :company, class: "form-control", placeholder: "Onde você tabalha?" %>
              </div>
              <br>

              <h4>Configurações de Senha</h4>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <span class="help-block">
                    <i class="fa fa-bell-o"></i>
                    Aguardando confirmação para o email: <%= resource.unconfirmed_email %>
                  </span>
              <% end %>

              <!-- COMPANY -->
              <div class="input-group has-warning">
                <%= f.label :password, class:"control-label" %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
              <br>

              <div class="input-group has-warning">
                <%= f.label :password_confirmation, class:"control-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>
              <br>
            <!-- /.box-body -->

            <div class="box-footer">
              <%= f.submit "Cadastrar", class: "btn btn-primary" %>
            </div>
          </div>
          <!-- /.box -->
        <% end %>
      </div> <!-- /col-md-6 -->
    </div> <!-- row -->
  </section>
<%= render "clients/shared/links" %>
</div>
