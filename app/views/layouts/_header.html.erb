<header class="main-header">
  <!-- Logo -->
  <% if client_signed_in? %>
    <%= link_to client_path(current_client), class: "logo" do %>
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>ME</b>J</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Eletron</b>jun</span>
    <% end %>
  <% end %>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <% if client_signed_in? %>
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
    <% end %>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown notifications-menu">
          <% unless client_signed_in? %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-chevron-right"></i> Entrar
            </a>
            <ul class="dropdown-menu">
              <li class="header">Opções para o cliente</li>
              <li>
                <!-- inner menu: contains the actual data -->
                <ul class="menu">
                  <li>
                    <%= link_to new_client_session_path do %>
                     <i class="fa fa-users text-aqua"></i> Já sou cliente
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_client_registration_path do %>
                      <i class="fa fa-edit text-green"></i> Cadastrar
                    <% end %>
                  </li>
                </ul>
              </li>
            </ul>
          <% else %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-chevron-right"></i> Sair
            </a>
            <ul class="dropdown-menu">
              <li class="header">Opções para o cliente</li>
              <li>
                <!-- inner menu: contains the actual data -->
                <ul class="menu">
                  <li>
                    <%= link_to root_path do %>
                     <i class="fa fa-reply text-aqua"></i> Voltar para o Início
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_client_session_path, method: :delete do %>
                      <i class="fa fa-power-off text-red"></i> Log Out
                    <% end %>
                  </li>
                </ul>
              </li>
            </ul>
          <% end %>
        </li>
        <!-- Notifications: style can be found in dropdown.less -->
        <li class="dropdown notifications-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-bell-o"></i> Menu do Cliente
          </a>
          <ul class="dropdown-menu">
            <li class="header">Opções para o cliente</li>
            <li>
              <!-- inner menu: contains the actual data -->
              <ul class="menu">
                <li>
                  <a href="#">
                   <i class="fa fa-users text-aqua"></i> Nossos Serviços
                  </a>
                </li>
                <li>
                  <a href="#">
                    <i class="fa fa-shopping-cart text-green"></i> Nossos Produtos
                  </a>
                </li>
                <li>
                  <a href="#">
                    <i class="fa fa-users text-red"></i> Nossos Clientes
                  </a>
                </li>
                <li>
                  <a href="#">
                    <i class="fa fa-phone text-red"></i> Fale Conosco
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </li>
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="hidden-xs"><i class="fa fa-building"></i> Eletronjun</span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <%= image_tag("/images/logo_small_eletronjun.png", alt: "Logo Eletronjun") %>
              <p>
                EletronJun
                <small>Engenharia Eletrônica Júnior</small>
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <div class="row">
                <div class="col-xs-6 text-center">
                  <a href="http://eletronjun.com.br/"><i class="fa fa-check-circle text-green"></i> Site Oficial</a>
                </div>
                <div class="col-xs-6 text-center">
                  <a href="https://www.facebook.com/eletronjun/"><i class="fa fa-facebook text-blue"></i> Facebook</a>
                </div>
              </div>
              <!-- /.row -->
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
